<div class="popup-buttons">
  <button class="cancel-popup-button" type="button" {{on "click" @onClose}}>{{i18n
      "buttons.cancel"
    }}</button>
  <button
    class={{concatClass
      "right-popup-button"
      (if @rightButtonClass @rightButtonClass)
    }} type="button" {{on "click" @onAdd}}
  >
    {{i18n (concat "buttons." (if @rightButtonClass @rightButtonClass "add"))}}
  </button>
</div>